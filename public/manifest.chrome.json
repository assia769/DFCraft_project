{
  "manifest_version": 3,
  "name": "DFCraft - Deep Focus Timer",
  "version": "1.0.0",
  "description": "Craft your focus with Pomodoro timer, todos, and distraction blocking",

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "DFCraft",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],

  "permissions": ["storage", "notifications", "alarms", "activeTab", "offscreen"],

  "options_page": "src/options/options.html",
  
  "web_accessible_resources": [{
    "resources": ["sounds/*.wav", "offscreen.html", "offscreen.js"],
    "matches": ["<all_urls>"]
  }]
}
